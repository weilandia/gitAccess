<div class="container">
  <% @repos.each do |repo| %>
    <% if !repo.views.empty? %>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="<%= repo.repo[:name] %>-heading">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= repo.repo[:name] %>" aria-expanded="true" aria-controls="<%= repo.repo[:name] %>">
              <%= repo.repo[:name] %>
            </a>
          </h4>
        </div>
        <div id="<%= repo.repo[:name] %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="<%= repo.repo[:name] %>-heading">
          <div class="panel-body">
            <table class="table table-striped">
              <tbody>
              <% repo.views.each do |view| %>
                  <% if view.class == Array %>
                    <% view.each do |v| %>
                    <tr>
                      <td>
                        <%= v.path %>
                      </td>
                    </tr>
                    <% end %>
                  <% else %>
                  <tr>
                    <td>
                      <%= view.path %>
                    </td>
                  </tr>
                  <% end %>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
